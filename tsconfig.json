{
  "compilerOptions": {
    "outDir": "dist",
    "allowJs": true,
    "lib": [
      "ES2017",
      "ES2021",
      "dom"
    ],
    "esModuleInterop": true,
    "module": "CommonJS",

    "skipLibCheck": true,
    "allowUnreachableCode": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true
  },
  "include": ["src/**/*.ts"],
  "ts-node": {
    "swc": true
  }
}
